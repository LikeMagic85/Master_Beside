<resources>
    <!-- Base application theme. -->
    <style name="Theme.МастерРядом" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#23A300</item>
        <item name="colorPrimaryVariant">#4CC66F</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#000000</item>
        <item name="colorSecondaryVariant">#BFBFBF</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#000000</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">?colorSecondary</item>
        <item name="materialButtonStyle">@style/MyMaterialButtons</item>
        <item name="chipStyle">@style/MyChipStyle</item>
        <item name="textInputStyle">@style/MyTextEditInputStyle</item>
    </style>

    <!--MY STYLES-->

    <style name="Theme.МастерРядом.Splash" parent="Widget.AppCompat.Toolbar">
        <item name="android:windowBackground">@drawable/loading_logo</item>
    </style>
    <style name="MyMaterialButtons" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?colorPrimaryVariant</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">?colorSecondary</item>
    </style>
    <style name="MyChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/background_color_chip_state_list</item>
        <item name="textStartPadding">20dp</item>
        <item name="textEndPadding">20dp</item>
        <item name="android:textColor">@color/text_color_chip_state_list</item>
    </style>
    <style name="MyTextEditInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/gray</item>
        <item name="hintTextColor">@color/gray</item>
    </style>
</resources>